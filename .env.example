# --- СИСТЕМНЫЕ НАСТРОЙКИ ---
NODE_ENV=production
APP_PORT=3000

# --- ПОДКЛЮЧЕНИЕ К POSTGRESQL (Обязательные) ---
# Приложение должно уметь собирать строку подключения из этих переменных
PGHOST=host_address
PGPORT=5432
PGUSER=postgres
PGPASSWORD=secure_password
PGDATABASE=eisenhower_db
POSTGRES_DB=eisenhower_db
POSTGRES_PASSWORD=secure_password
POSTGRES_USER=postgres

# --- ОПЦИОНАЛЬНЫЕ (RAILWAY/CLOUD) ---
DATABASE_URL=""
DATABASE_PUBLIC_URL=""
RAILWAY_DEPLOYMENT_DRAINING_SECONDS=5
SSL_CERT_DAYS=365
PGDATA=/var/lib/postgresql/data

# --- НАСТРОЙКИ СЕРВИСА PRIORITY CIC ---
# Порог срабатывания срочности (дни)
URGENCY_THRESHOLD_DAYS=15
# Частота проверки базы сервисом (в минутах)
CIC_CHECK_INTERVAL_MINUTES=60
